<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Past">

    <Button
        android:text="Account details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAccount"
        android:onClick="accountdetails"
        android:layout_marginTop="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnGps"
        android:layout_alignEnd="@+id/btnGps"
        android:layout_alignLeft="@+id/btnGps"
        android:layout_alignStart="@+id/btnGps" />

    <Button
        android:text="Share your location \n to get personalised music "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGps"
        android:layout_below="@+id/btnAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/location"
        android:id="@+id/imageView3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnGps" />

</RelativeLayout>
